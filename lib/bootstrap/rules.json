{
  "rules": {
    "rooms": {
      ".read": true,
      ".indexOn": ["name"]
    },
    "events": {
      ".read": true,
      ".indexOn": ["name"]
    },
    "presenters": {
      ".read": true,
      ".indexOn": ["name"]
    },
    "tracks": {
      ".read": true,
      ".indexOn": ["name"]
    },
    "schedules": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid",
        "events": {
          "$event_id": {
            ".validate": "root.child('events').child($event_id).exists()"
          }
        }
      }
    }
  }
}
